<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Item"
            type="com.dbeginc.dbshopping.viewmodels.ItemModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/itemDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ItemDetailColorPrimaryLight"
        tools:context=".detailItem.view.ItemDetailViewImpl">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/itemDetailAppBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/itemDetailToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize"
                android:background="@color/ItemDetailColorPrimaryLight"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:elevation="24dp"
                app:contentInsetStart="0dp"
                app:contentInsetEnd="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_scrollFlags="scroll|enterAlways" />

        </android.support.design.widget.AppBarLayout>

        <ProgressBar
            android:id="@+id/itemDetailUpdateStatusPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintTop_toBottomOf="@id/itemDetailAppBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/itemImageDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="200dp"
            android:contentDescription="@string/itemImageDescription"
            app:layout_constraintTop_toBottomOf="@+id/itemDetailUpdateStatusPB"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:setImageUrl="@{Item.image}"
            tools:src="@drawable/ic_no_image" />

        <android.support.constraint.Guideline
            android:id="@+id/middleDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="192dp" />

        <android.support.constraint.Guideline
            android:id="@+id/itemPriceDetailLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="269dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/itemNameDetailContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/Widget.Design.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/itemImageDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/middleDivider">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/itemNameDetail"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/LabelItemName"
                android:inputType="text"
                android:maxLines="1"
                android:text="@={Item.name}"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/itemPriceDetailContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/Widget.Design.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/itemImageDetail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/itemPriceDetailLimit">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/itemPriceDetail"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/LabelItemPrice"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:text="@={`` + Item.price}" />

        </android.support.design.widget.TextInputLayout>

        <android.support.constraint.Guideline
            android:id="@+id/itemCountDetailLeftLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>

        <android.support.constraint.Guideline
            android:id="@+id/itemCountDetailLeftRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>

        <LinearLayout
            android:id="@+id/itemCountDetailTopDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/itemNameDetailContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/removeItemCountDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_black"
            android:layout_margin="16dp"
            style="@style/Widget.Design.FloatingActionButton"
            app:fabSize="mini"
            app:rippleColor="@color/ItemDetailColorSecondaryLight"
            app:layout_constraintTop_toBottomOf="@id/itemCountDetailTopDivider"
            app:layout_constraintLeft_toLeftOf="@id/itemCountDetailTopDivider"
            app:layout_constraintRight_toLeftOf="@+id/itemCountDetail"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <TextView
            android:id="@+id/itemCountDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text='@{"" + Item.count}'
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="32sp"
            tools:text="5"
            app:layout_constraintTop_toBottomOf="@id/itemCountDetailTopDivider"
            app:layout_constraintLeft_toRightOf="@id/removeItemCountDetail"
            app:layout_constraintRight_toLeftOf="@+id/addItemCountDetail"
            app:layout_constraintBottom_toTopOf="@+id/itemCountDetailBottomDivider"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addItemCountDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_black"
            app:fabSize="mini"
            app:rippleColor="@color/ItemDetailColorSecondaryLight"
            app:layout_constraintTop_toBottomOf="@id/itemCountDetailTopDivider"
            app:layout_constraintLeft_toRightOf="@id/itemCountDetail"
            app:layout_constraintRight_toRightOf="@id/itemCountDetailTopDivider" />

        <LinearLayout
            android:id="@id/itemCountDetailBottomDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/removeItemCountDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/itemBrought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_item_was_bought_black"
            style="@style/Widget.Design.FloatingActionButton"
            app:fabSize="normal"
            app:rippleColor="@color/ItemDetailColorSecondaryLight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>