<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="User"
            type="com.dbeginc.domain.entities.user.User"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/colorPrimary">



        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/ic_person_black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"/>

        <TextView
            android:id="@+id/userNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:text="@{User.name}"
            tools:text="Bitsy Darel"
            app:layout_constraintTop_toBottomOf="@id/userProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/userEmailTxt"
            app:layout_constraintHorizontal_bias="0.1"/>

        <TextView
            android:id="@+id/userEmailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{User.email}"
            android:textSize="16sp"
            android:textColor="@color/colorTextPrimary"
            tools:text="bitsydarel@gmail.com"
            app:layout_constraintTop_toBottomOf="@id/userNameTxt"
            app:layout_constraintLeft_toLeftOf="@id/userNameTxt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

    </android.support.constraint.ConstraintLayout>
</layout>