<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/listItemsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/black">

        <ProgressBar
            android:id="@+id/loadingBarPB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/listInShoppingModeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="start"
            android:text="@string/currentlyShoppingList"
            android:textColor="@color/ListDetailColorTextPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/loadingBarPB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/listInShoppingModeStatus"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/listInShoppingModeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            style="@style/Widget.AppCompat.CompoundButton.Switch"
            app:layout_constraintTop_toBottomOf="@id/detailAppBar"
            app:layout_constraintLeft_toRightOf="@id/listInShoppingModeLabel"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/listItemsSRL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/listInShoppingModeLabel"
            app:layout_constraintBottom_toTopOf="@+id/addItemBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listItemsRCV"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scrollbars="vertical" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/empty_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_empty_white_box"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/listEmpty"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/addItemBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/listItemsLayout" />

        <android.support.constraint.Guideline
            android:id="@+id/bottomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addItemBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white"
            app:elevation="8dp"
            app:fabSize="auto"
            app:rippleColor="@color/ListDetailColorSecondaryLight"
            app:layout_constraintBottom_toTopOf="@id/bottomLimit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0" />

    </android.support.constraint.ConstraintLayout>
</layout>