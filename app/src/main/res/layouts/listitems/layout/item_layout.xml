<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Item"
            type="com.dbeginc.dbshopping.viewmodels.ItemModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <android.support.constraint.Guideline
                android:id="@+id/imageLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25"/>

            <android.support.constraint.Guideline
                android:id="@+id/nameLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7"/>

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:contentDescription="@string/itemImageDescription"
                tools:src="@drawable/ic_no_image"
                app:setCircleImage="@{Item.image}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/imageLimit"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/itemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{Item.name}"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="Papier Toilette"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageLimit"
                app:layout_constraintRight_toLeftOf="@id/nameLimit"
                app:layout_constraintBottom_toTopOf="@+id/itemPrice"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/ListDetailColorSecondaryLight"
                android:gravity="start"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="10.0$"
                app:setPrice="@{Item.price}"
                app:layout_constraintTop_toBottomOf="@id/itemName"
                app:layout_constraintLeft_toRightOf="@id/imageLimit"
                app:layout_constraintRight_toLeftOf="@id/nameLimit"
                app:layout_constraintBottom_toTopOf="@+id/itemBoughtBy"/>

            <TextView
                android:id="@+id/itemBoughtBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/darker_gray"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:boughtBy="@{Item.boughtBy}"
                app:layout_constraintTop_toBottomOf="@id/itemPrice"
                app:layout_constraintLeft_toRightOf="@id/imageLimit"
                app:layout_constraintRight_toLeftOf="@id/nameLimit"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <CheckBox
                android:id="@+id/itemBrought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@={Item.bought}"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/nameLimit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>