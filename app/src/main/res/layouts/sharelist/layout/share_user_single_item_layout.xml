<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Account"
            type="com.dbeginc.dbshopping.viewmodels.AccountModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <android.support.constraint.Guideline
                android:id="@+id/shareUserImageLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.20"/>

            <android.support.constraint.Guideline
                android:id="@+id/shareUserInfoLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.80"/>

            <ImageView
                android:id="@+id/shareUserImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/shareUserImageDescription"
                tools:src="@drawable/ic_person_black"
                app:setCircleImage="@{Account.profileImage}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/shareUserImageLimit"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/shareUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="Darel Bitsy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/shareUserImageLimit"
                app:layout_constraintRight_toLeftOf="@id/shareUserInfoLimit"
                app:layout_constraintBottom_toTopOf="@+id/shareUserEmail"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_chainStyle="spread_inside"/>

            <TextView
                android:id="@+id/shareUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textStyle="normal"
                tools:text="bitsydarel@gmail.com"
                app:layout_constraintTop_toBottomOf="@id/shareUserName"
                app:layout_constraintLeft_toRightOf="@id/shareUserImageLimit"
                app:layout_constraintRight_toLeftOf="@id/shareUserInfoLimit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"/>


            <CheckBox
                android:id="@+id/shareUserSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/shareUserInfoLimit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>