<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="Account"
            type="com.dbeginc.dbshopping.viewmodels.AccountModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <android.support.constraint.Guideline
            android:id="@+id/shareUserImageLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20"/>

        <ImageView
            android:id="@+id/shareUserImageAC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/shareUserImageDescription"
            tools:src="@drawable/ic_person_black"
            app:setCircleImage="@{Account.profileImage}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/shareUserImageLimit"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/shareUserNameAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Darel Bitsy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shareUserImageLimit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/shareUserEmailAC"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

        <TextView
            android:id="@+id/shareUserEmailAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            tools:text="bitsydarel@gmail.com"
            app:layout_constraintTop_toBottomOf="@id/shareUserNameAC"
            app:layout_constraintLeft_toRightOf="@id/shareUserImageLimit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

    </android.support.constraint.ConstraintLayout>

</layout>