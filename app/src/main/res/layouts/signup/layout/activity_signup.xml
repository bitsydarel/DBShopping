<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/signUpViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SignUpColorPrimary"
        android:animateLayoutChanges="true"
        tools:context="com.dbeginc.dbshopping.login.view.LoginViewImpl">

        <TextView
            android:id="@+id/signUpHeaderLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/signUpLabel"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/SignUpColorSecondary"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.v7.widget.CardView
            android:id="@+id/signUpWithEmailLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="2dp"
            app:layout_constraintTop_toBottomOf="@id/signUpHeaderLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/orLeftLine"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="64dp"
                    android:orientation="horizontal"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/orConnectWithTxt"/>

                <TextView
                    android:id="@id/orConnectWithTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:layout_marginTop="56dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/orLeftLine"
                    app:layout_constraintRight_toLeftOf="@+id/orRightLine"/>

                <LinearLayout
                    android:id="@+id/orRightLine"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/orConnectWithTxt"
                    app:layout_constraintRight_toRightOf="parent"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signUpNicknameContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:hintAnimationEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/orConnectWithTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signUpNickname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Widget.AppCompat.EditText"
                        android:hint="@string/NicknameHint"
                        android:inputType="text"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signUpEmailContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:hintAnimationEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/signUpNicknameContainer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signUpEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Widget.AppCompat.EditText"
                        android:hint="@string/EmailHint"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/signUpPasswordContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="@style/Widget.Design.TextInputLayout"
                    app:hintAnimationEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/signUpEmailContainer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/signUpPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Widget.AppCompat.EditText"
                        tools:hint="Password"
                        android:hint="@string/PasswordHint"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/signUpButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="56dp"
                    android:text="@string/signUpLabel"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    tools:text="Sing up"
                    app:layout_constraintTop_toBottomOf="@id/signUpPasswordContainer"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/signUpOptions"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="16dp"
            style="@style/CardView.Light"
            app:cardBackgroundColor="@color/SignUpColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/signUpHeaderLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/signUpWithGoogleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/signUpWithGoogleDescription"
                    android:src="@drawable/ic_authenticate_with_google"
                    style="@style/Widget.AppCompat.ImageButton"
                    app:rippleColor="@color/SignUpColorSecondaryLight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/signUpWithFacebookBtn"
                    app:layout_constraintHorizontal_chainStyle="packed"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/signUpWithFacebookBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/signUpWithFacebookDescription"
                    android:src="@drawable/ic_authenticate_with_facebook"
                    style="@style/Widget.AppCompat.ImageButton"
                    app:rippleColor="@color/SignUpColorSecondaryLight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/signUpWithGoogleBtn"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/goToLoginScreenTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alreadyHaveAccountToLogin"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/signUpWithEmailLayout"
            app:layout_constraintLeft_toLeftOf="@id/signUpWithEmailLayout"
            app:layout_constraintRight_toLeftOf="@+id/goToLoginScreenBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <Button
            android:id="@+id/goToLoginScreenBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginLabel"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintTop_toBottomOf="@id/signUpWithEmailLayout"
            app:layout_constraintLeft_toRightOf="@id/goToLoginScreenTxt"
            app:layout_constraintRight_toRightOf="@id/signUpWithEmailLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>
